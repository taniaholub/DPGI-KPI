<Window x:Class="Lab4.CreateClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Client" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Client Id:" Margin="5"/>
            <TextBox x:Name="ClientId" Margin="5" Width="300"/>

            <TextBlock Text="Client Name:" Margin="5"/>
            <TextBox x:Name="ClientNameTextBox" Margin="5" Width="300"/>

            <TextBlock Text="Phone Number:" Margin="5"/>
            <TextBox x:Name="PhoneNumberTextBox" Margin="5" Width="300"/>

            <TextBlock Text="Address:" Margin="5"/>
            <TextBox x:Name="AddressTextBox" Margin="5" Width="300"/>

            <TextBlock Text="Order Amount:" Margin="5"/>
            <TextBox x:Name="OrderAmountTextBox" Margin="5" Width="300"/>

            <Button Content="Create" Width="100" Margin="20" HorizontalAlignment="Center" Click="CreateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
