<Window x:Class="Lab4.UpdateClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Lab4"
        Title="Update Client" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Client Name:" Margin="5"/>
            <TextBox x:Name="ClientNameTextBox" Margin="5" Width="300"/>

            <TextBlock Text="Phone Number:" Margin="5"/>
            <TextBox x:Name="PhoneNumberTextBox" Margin="5" Width="300"/>

            <TextBlock Text="Address:" Margin="5"/>
            <TextBox x:Name="AddressTextBox" Margin="5" Width="300"/>

            <TextBlock Text="Order Amount:" Margin="5"/>
            <TextBox x:Name="OrderAmountTextBox" Margin="5" Width="300"/>

            <Button Content="Update" Width="100" Margin="20" HorizontalAlignment="Center" Click="UpdateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
